<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="recherche_personApp1.MainPage">

    <StackLayout Padding="20">
        <Label Text="Rechercher le nombre d'enfants nés avec un prénom donné" 
               FontSize="24" 
               HorizontalOptions="Center" />
        <Entry x:Name="PrenomEntry" Placeholder="Entrez un prénom" />
        <Entry x:Name="AnneeEntry" Placeholder="Entrez une année (2003-2023)" Keyboard="Numeric" />
        <Button Text="Rechercher" Clicked="OnRechercherClicked" />
        <Label x:Name="ResultatLabel" FontSize="18" HorizontalOptions="Center" />
    </StackLayout>

</ContentPage>
